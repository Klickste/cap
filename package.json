{
	"name": "@klickste/cap",
	"version": "6.0.0-beta.1",
	"description": "Adaptive typography for the web.",
	"license": "MIT",
	"author": "klickste",
	"repository": {
		"type": "git",
		"url": "https://github.com/klickste/cap.git"
	},
	"files": [
		"dist/",
		"cap.scss"
	],
	"devDependencies": {
		"concurrently": "^8.2.2",
		"esbuild": "^0.19.5",
		"prettier": "^3.0.3",
		"sass": "^1.70.0"
	},
	"scripts": {
		"sass:dev": "sass www/style.scss www/style.css --no-source-map --load-path=./",
		"sass:prod": "sass www/style.scss www/style.css --style=compressed --no-source-map --load-path=./",
		"sass:watch": "sass www/style.scss www/style.css --watch --no-source-map --load-path=./",
		"js:dev": "esbuild cap.js --bundle --outfile=dist/cap.js",
		"js:prod": "esbuild cap.js --bundle --minify --outfile=dist/cap.js",
		"js:serve": "esbuild cap.js --bundle --watch --outfile=www/cap.js --servedir=www",
		"start": "concurrently \"npm run js:serve\" \"npm run js:watch\" \"npm run sass:watch\"",
		"build": "node tools/build.mjs",
		"format": "prettier . --write"
	},
	"prettier": {
		"printWidth": 120,
		"semi": false,
		"singleQuote": true
	}
}
