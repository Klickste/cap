{
  "name": "@klickste/cap",
  "version": "1.0.0-beta.4",
  "description": "Adaptive typography for the web.",
  "license": "MIT",
  "author": "klickste",
  "repository": {
    "type": "git",
    "url": "https://github.com/klickste/cap.git"
  },
  "files": [
    "src/"
  ],
  "scripts": {
    "sass.dev": "node_modules/.bin/sass style.scss dist/style.css",
    "sass.prod": "node_modules/.bin/sass style.scss dist/style.css --style=compressed --no-source-map ",
    "sass.watch": "node_modules/.bin/sass style.scss dist/style.css --watch",
    "browser-sync": "browser-sync start --server --files \"dist/style.css, index.html\"",
    "start": "concurrently \"npm:sass.watch\" \"npm:browser-sync\"",
    "format": "prettier \"**/*.{scss,js,json,md,html}\" --write",
    "font-metrics": "node tools/font-metrics.js"
  },
  "dependencies": {
    "sass": "^1.43.2"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "concurrently": "^6.3.0",
    "fontkit": "^1.8.1",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "strict"
  }
}
