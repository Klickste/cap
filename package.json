{
  "name": "@klickste/cap",
  "version": "2.0.0",
  "description": "Adaptive typography for the web.",
  "license": "MIT",
  "author": "klickste",
  "repository": {
    "type": "git",
    "url": "https://github.com/klickste/cap.git"
  },
  "files": [
    "index.scss",
    "library/"
  ],
  "scripts": {
    "test:dev": "node_modules/.bin/sass tests/style.scss tests/style.css --no-source-map --load-path=./",
    "test:prod": "node_modules/.bin/sass tests/style.scss tests/style.css --style=compressed --no-source-map --load-path=./",
    "test:watch": "node_modules/.bin/sass tests/style.scss tests/style.css --watch --no-source-map --load-path=./",
    "test:metrics": "node tests/metrics.js",
    "format": "prettier . --write"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "sass": "^1.49.0"
  },
  "devDependencies": {
    "fontkit": "^1.8.1",
    "prettier": "^2.5.1"
  }
}
